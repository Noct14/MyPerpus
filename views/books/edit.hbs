<div class="page-header">
  <h1>Edit Book</h1>
  <a href="/books" class="btn btn-secondary">‚Üê Back</a>
</div>

<div class="card form-card">
  <form method="POST" action="/books/{{book.id}}/edit">

    <div class="form-group">
      <label>Title</label>
      <input type="text" name="title" value="{{book.title}}" required>
    </div>

    <div class="form-group">
      <label>Published Year</label>
      <input type="number" name="published_year" value="{{book.published_year}}" required>
    </div>

    <div class="form-group">
      <label>Author</label>
      <select name="author_id" required>
        {{#each authors}}
          <option value="{{this.id}}"
            {{#if (eq this.id ../book.author_id)}}selected{{/if}}>
            {{this.name}}
          </option>
        {{/each}}
      </select>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Update Book</button>
      <a href="/books" class="btn btn-secondary">Cancel</a>
    </div>

  </form>
</div>
