<div class="page-header">
  <h1>Book Detail</h1>
  <a href="/books" class="btn btn-secondary">‚Üê Back</a>
</div>

<div class="card detail-card">
  <div class="detail-header">
    <h2>{{book.title}}</h2>
    <div class="detail-actions">
      <a href="/books/{{book.id}}/edit" class="btn btn-primary">Edit</a>
      <a href="/books/{{book.id}}/delete" class="btn btn-danger">Delete</a>
    </div>
  </div>

  <div class="detail-grid">
    <div class="detail-item">
      <span>Published Year</span>
      <strong>{{book.published_year}}</strong>
    </div>

    <div class="detail-item">
      <span>Author</span>
      <strong>
        <a href="/authors/{{book.author.id}}" class="link">
          {{book.author.name}}
        </a>
      </strong>
    </div>

    <div class="detail-item">
      <span>Created At</span>
      <strong>{{book.created_at}}</strong>
    </div>

    <div class="detail-item">
      <span>Updated At</span>
      <strong>{{book.updated_at}}</strong>
    </div>
  </div>
</div>
