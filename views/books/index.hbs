<h1>Books</h1>

<form method="GET" action="/books">
  <input type="text" name="search" placeholder="Search book..." value="{{search}}">
  <button type="submit">Search</button>
  <a href="/books/create">+ Create Book</a>
</form>

<hr>

<table border="1" cellpadding="8">
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Year</th>
    <th>Author</th>
    <th>Action</th>
  </tr>

  {{#each books}}
  <tr>
    <td>{{this.id}}</td>
    <td>{{this.title}}</td>
    <td>{{this.published_year}}</td>
    <td>{{this.author.name}}</td>
    <td>
      <a href="/books/{{this.id}}/edit">Edit</a>
      <a href="/books/{{this.id}}/delete">Delete</a>
    </td>
  </tr>
  {{/each}}
</table>
