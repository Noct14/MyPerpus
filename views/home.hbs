<div class="page-header">
  <h1>Dashboard</h1>
  <a href="/books/create" class="btn btn-primary">+ Create Book</a>
</div>

<!-- SUMMARY CARDS -->
<div class="stats-grid">
  <div class="stat-card">
    <span>Total Books</span>
    <h2>{{total}}</h2>
  </div>

  <div class="stat-card">
    <span>Search Result</span>
    <h2>{{total}}</h2>
  </div>
</div>

<div class="card">

  <form method="GET" action="/" class="search-bar">
    <input 
      type="text" 
      name="search" 
      placeholder="Search book..." 
      value="{{search}}"
    >
    <button type="submit" class="btn btn-secondary">Search</button>
  </form>

  <div class="table-wrapper">
    <table class="modern-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Year</th>
          <th>Author</th>
          <th class="text-right">Action</th>
        </tr>
      </thead>

      <tbody>
        {{#if books.length}}
          {{#each books}}
          <tr>
            <td>#{{this.id}}</td>
            <td class="book-title">
              <a href="/books/{{this.id}}" class="link">
                {{this.title}}
              </a>
            </td>
            <td>
              <span class="badge">{{this.published_year}}</span>
            </td>
            <td>{{this.author.name}}</td>
            <td class="text-right action-buttons">
              <a href="/books/{{this.id}}" class="btn btn-sm btn-secondary">View</a>
              <a href="/books/{{this.id}}/edit" class="btn btn-sm btn-primary">Edit</a>
              <a href="/books/{{this.id}}/delete" class="btn btn-sm btn-danger">Delete</a>
            </td>
          </tr>
          {{/each}}
        {{else}}
          <tr>
            <td colspan="5" class="empty-state">
              No books available.
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>

  {{#if showPagination}}
    <div class="pagination">
      {{#if hasPrev}}
        <a 
          href="/?page={{prevPage}}{{#if search}}&search={{search}}{{/if}}" 
          class="btn btn-sm btn-secondary"
        >
          ‹ Prev
        </a>
      {{/if}}

      <span class="pagination-info">
        Page {{page}} of {{totalPages}} ({{total}} books)
      </span>

      {{#if hasNext}}
        <a 
          href="/?page={{nextPage}}{{#if search}}&search={{search}}{{/if}}" 
          class="btn btn-sm btn-secondary"
        >
          Next ›
        </a>
      {{/if}}
    </div>
  {{/if}}
</div>
