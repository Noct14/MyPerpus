<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
  </head>
  <body>
    {{#if user}}
      <p>Welcome, {{user.email}}</p>
      <a href="/auth/logout">Logout</a>
    {{else}}
      <a href="/auth/login">Login</a>
      <a href="/auth/register">Register</a>
    {{/if}}
    
    <h1>{{message}}</h1>
  </body>
</html>