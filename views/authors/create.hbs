<h1>Create Author</h1>

<form method="POST" action="/authors/create">
  <div>
    <label>Name</label>
    <input type="text" name="name" required>
  </div>

  <div>
    <label>Bio</label>
    <textarea name="bio"></textarea>
  </div>

  <button type="submit">Save</button>
  <a href="/authors">Back</a>
</form>
