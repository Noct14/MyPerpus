<h1>Edit Author</h1>

<form method="POST" action="/authors/{{author.id}}/edit">
  <div>
    <label>Name</label>
    <input type="text" name="name" value="{{author.name}}" required>
  </div>

  <div>
    <label>Bio</label>
    <textarea name="bio">{{author.bio}}</textarea>
  </div>

  <button type="submit">Update</button>
  <a href="/authors">Back</a>
</form>
