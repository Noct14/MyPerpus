<div class="page-header">
  <h1>Edit Author</h1>
  <a href="/authors" class="btn btn-secondary">‚Üê Back</a>
</div>

<div class="card form-card">
  <form method="POST" action="/authors/{{author.id}}/edit">

    <div class="form-group">
      <label>Name</label>
      <input type="text" name="name" value="{{author.name}}" required>
    </div>

    <div class="form-group">
      <label>Bio</label>
      <textarea name="bio" rows="5">{{author.bio}}</textarea>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Update Author</button>
      <a href="/authors" class="btn btn-secondary">Cancel</a>
    </div>

  </form>
</div>
