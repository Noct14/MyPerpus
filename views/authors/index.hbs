<div class="page-header">
  <h1>Authors</h1>
  <a href="/authors/create" class="btn btn-primary">+ Create Author</a>
</div>

<div class="card">

  <form method="GET" action="/authors" class="search-bar">
    <input 
      type="text" 
      name="search" 
      placeholder="Search author..." 
      value="{{search}}"
    >
    <button type="submit" class="btn btn-secondary">Search</button>
  </form>

  <div class="table-wrapper">
    <table class="modern-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Bio</th>
          <th class="text-right">Action</th>
        </tr>
      </thead>

      <tbody>
        {{#if authors.length}}
          {{#each authors}}
          <tr>
            <td>#{{this.id}}</td>
            <td class="book-title">
              <a href="/authors/{{this.id}}" class="link">
                {{this.name}}
              </a>
            </td>
            <td class="truncate">{{this.bio}}</td>
            <td class="text-right action-buttons">
              <a href="/authors/{{this.id}}" class="btn btn-sm btn-secondary">View</a>
              <a href="/authors/{{this.id}}/edit" class="btn btn-sm btn-primary">Edit</a>
              <a href="/authors/{{this.id}}/delete" class="btn btn-sm btn-danger">Delete</a>
            </td>
          </tr>
          {{/each}}
        {{else}}
          <tr>
            <td colspan="4" class="empty-state">
              No authors found.
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>

</div>
